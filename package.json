{
	"name": "gitdocs",
	"version": "2.0.0",
	"description": "Easy to use, SEO-friendly, beautiful documentation that lives in your git repo.",
	"license": "MIT",
	"homepage": "https://github.com/timberio/gitdocs#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/timberio/gitdocs.git"
	},
	"engines": {
		"node": ">=8"
	},
	"keywords": [
		"documentation",
		"static",
		"markdown",
		"react",
		"docs"
	],
	"files": [
		"bin/",
		"boilerplate/",
		"dist/",
		"license.md",
		"readme.md"
	],
	"main": "dist/index.js",
	"bin": {
		"gitdocs": "bin/gitdocs"
	},
	"scripts": {
		"test:lint": "eslint bin src tests",
		"test:unit": "ava 'src/**/*.spec.js'",
		"test:integration": "ava 'tests/**/*.test.js'",
		"test": "npm-run-all test:*",
		"prebuild": "rm -rf dist",
		"build": "babel src -d dist",
		"watch": "npm run build -- -w"
	},
	"devDependencies": {
		"@babel/cli": "^7.0.0-beta.44",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.44",
		"ava": "^0.25.0",
		"eslint": "^4.19.1",
		"eslint-config-timber": "^1.0.6",
		"npm-run-all": "^4.1.2",
		"nyc": "^11.6.0",
		"sinon": "^4.5.0"
	},
	"dependencies": {
		"@babel/core": "^7.0.0-beta.44",
		"@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.44",
		"@babel/plugin-transform-react-jsx": "^7.0.0-beta.44",
		"@babel/register": "^7.0.0-beta.44",
		"chalk": "^2.3.2",
		"deepmerge": "^2.1.0",
		"fs-extra": "^5.0.0",
		"glob": "^7.1.2",
		"html-minifier": "^3.5.13",
		"markdown-to-jsx": "^6.6.1",
		"memory-fs": "^0.4.1",
		"minimist": "^1.2.0",
		"object-path": "^0.11.4",
		"react": "^16.3.1",
		"react-dom": "^16.3.1",
		"react-helmet": "^5.2.0",
		"react-router": "^4.2.0",
		"react-router-config": "^1.0.0-beta.4",
		"react-router-dom": "^4.2.2",
		"webpack": "^4.5.0"
	},
	"eslintConfig": {
		"extends": "timber",
		"rules": {
			"no-underscore-dangle": 0,
			"arrow-body-style": 0,
			"import/prefer-default-export": 0,
			"no-console": 0,
			"import/no-dynamic-require": 0,
			"global-require": 0,
			"no-param-reassign": 0,
			"consistent-return": 0,
			"arrow-parens": 0,
			"function-paren-newline": 0,
			"jsx-a11y/anchor-is-valid": 0,
			"no-unused-vars": [
				2,
				{
					"args": "none"
				}
			],
			"no-unused-expressions": [
				2,
				{
					"allowShortCircuit": true,
					"allowTernary": true
				}
			],
			"react/prop-types": [
				2,
				{
					"skipUndeclared": true
				}
			]
		}
	},
	"babel": {
		"plugins": [
			"@babel/plugin-transform-modules-commonjs",
			"@babel/plugin-proposal-object-rest-spread",
			"@babel/plugin-transform-react-jsx"
		],
		"ignore": [
			"**/*.{spec,test}.js"
		]
	},
	"ava": {
		"require": [
			"@babel/register",
			"./tests/helpers.js"
		]
	}
}
